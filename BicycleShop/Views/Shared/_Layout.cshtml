<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bike Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link href="~/Content/css/fontawesome-all.min.css" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Bike Shop</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation" style="">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>

                <li class="nav-item"><a class="nav-link" asp-controller="Contact" asp-action="Index">Contact us</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">Admin</a></li>
                <li class="nav-item">
                    @await Component.InvokeAsync("ShoppingCartSummary")
                </li>
            </ul>
        </div>
    </nav>

    <div class="jumbotron" style="margin-bottom: -20px;">
        <div class="row">
            <div class="col-md-2">
                @await Component.InvokeAsync("CategoryMenu")
            </div>
            <div class="col-md-10">

                @RenderBody()
            </div>
        </div>

    </div>

    <section class="footerBackground">
        <div class="container">
            <div class="row">


                <div class="col-md-4 text-white">
                    <h5 class="pb-3">
                        Address
                    </h5>
                    <p class="text-body">
                        1234 Street Name
                        <br>City, AA 99999
                    </p>
                </div>
                <div class="col-md-6 text-white">
                    <h5 class="pb-3">
                        Contacts
                    </h5>
                    <p class="text-body">
                        Email: <email address="support@bikeshop.com" content="support@bikeshop.com"></email>
                        <br>Phone: +1 (0) 000 0000 001
                        <br>Fax: +1 (0) 000 0000 002
                    </p>
                </div>
            </div>

            <footer class="">

                <p class="text-white">
                    © Copyright @DateTime.Now.Year  Free
                </p>


            </footer>
        </div>

    </section>
    
    @RenderSection("scripts", required: false)
</body>

</html>
