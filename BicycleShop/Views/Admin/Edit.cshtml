@model Bike

@{
    ViewBag.Title = "Edit Bike";
   
}
<h4 class="text-center">@ViewBag.Title</h4>
<div class="row justify-content-center">
    <div class="col-md-10">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="offset-2 text-danger"></div>
            <input type="hidden" asp-for="BikeId" />
            <div class="form-group row">
                <label asp-for="Model" class="control-label col-md-2"></label>
                <input asp-for="Model" class="form-control col-md-8" />
                <span asp-validation-for="Model" class="offset-2 text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ShortDescription" class="control-label col-md-2"></label>
                <textarea asp-for="ShortDescription" class="form-control col-md-8"></textarea>
                <span asp-validation-for="ShortDescription" class="offset-2 text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="LongDescription" class="control-label col-md-2"></label>
                <textarea asp-for="LongDescription" class="form-control col-md-8"></textarea>
                <span asp-validation-for="LongDescription" class="offset-2 text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="control-label col-md-2"></label>
                <input asp-for="Price" class="form-control col-md-8" />
                <span asp-validation-for="Price" class="offset-2 text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ImageUrl" class="control-label col-md-2"></label>
                <input asp-for="ImageUrl" class="form-control col-md-8" />
                <span asp-validation-for="ImageUrl" class="offset-2 text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ImageThumbnailUrl" class="control-label col-md-2"></label>
                <input asp-for="ImageThumbnailUrl" class="form-control col-md-8" />
                <span asp-validation-for="ImageThumbnailUrl" class="offset-2 text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="checkbox offset-2 col-md-8">
                    <label>
                        <input asp-for="IsBikeOfTheWeek" /> @Html.DisplayNameFor(model => model.IsBikeOfTheWeek)
                    </label>
                </div>
            </div>
            <div class="form-group row">
                <div class="checkbox offset-2 col-md-8">
                    <label>
                        <input asp-for="InStock" /> @Html.DisplayNameFor(model => model.InStock)
                    </label>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="CategoryId" class="control-label col-md-2">Category</label>
                <select asp-for="CategoryId" class="form-control col-md-8" asp-items="ViewBag.Category"></select>
                <span asp-validation-for="CategoryId" class="offset-2 text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="offset-2 col-md-8">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
                
            </div>
        </form>
    </div>
</div>

<div>
    <a  asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
